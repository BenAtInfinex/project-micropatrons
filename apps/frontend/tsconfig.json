{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    /* Additional Checks */
    "noUnusedLocals": false,
    /* Module Resolution Options */
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
      "./node_modules"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "vite/client",
      "chrome"
    ],
    "allowUmdGlobalAccess": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/test-helpers/*": [
        "../integration-tests/src/helpers/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "vite.config.ts"
  ],
  "exclude": [
    "secrets.ts"
  ]
}
